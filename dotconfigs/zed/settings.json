{
  "ssh_connections": [
    {
      "host": "erdtodc01-prod",
      "username": "tphaneuf",
      "projects": [
        {
          "paths": ["/app/prod_apps/lor_metrics"]
        }
      ]
    }
  ],
  "icon_theme": "Material Icon Theme",
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "toolbar": {
    "quick_actions": false
  },
  "theme": "Ayu Mirage",
  "vim_mode": true,
  "ui_font_size": 15,
  "unstable.ui_density": "compact",
  "buffer_font_size": 13.0,
  "buffer_line_height": {
    "custom": 1.4
  },
  // Terminal
  "terminal": {
    "font_size": 13,
    "line_height": {
      "custom": 1.4
    },
    "default_height": 400
  },
  "language_overrides": {
    "HTML": {
      "prettier": {
        "printWidth": 120
      }
    }
  },
  "indent_guides": {
    // "coloring": "indent_aware",
    "active_line_width": 2
  },
  "relative_line_numbers": true
}
